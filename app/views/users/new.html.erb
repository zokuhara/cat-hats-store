<div class="col-md-6 col-md-offset-3">
  <h1>Please sign up</h1>

  <%= simple_form_for @user do |f| %>
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, label: "Confirm Password" %>
    <%= f.submit "Sign Up", class: "btn btn-success btn-lg btn-block" %>

  <% end %>
</div>
